<div class="articulo" itemscope>
<img src="/[foto]" class="imart" itemprop="image" alt='[titulo]'/>
<div class="descrip">
  <h3 title="[titulo]" itemprop="title">[titulo]</h3>
  <div class="date">
<p><small itemprop="pubdate"><i class="fa fa-calendar"></i>&nbsp;Publicado [publicado]</small></p>
<p><small itemprop="author"><i class="fa fa-user"></i>&nbsp;[user]</small></p>
<p><small><i class="fa fa-eye"></i>&nbsp;[visitas]&nbsp; Visitas</small></p>
<p><small><i class="fa fa-comments"></i>&nbsp;[comentarios] Comentarios</small></p>
<p><small><i class="fa fa-tags"></i>&nbsp;[categoria]</small></p></div>
<div class='contenido'><p itemprop="description">[contenido]</p></div>
<div class="leer">
<a href="javascript:void(0);" onclick="window.location.assign('/[id]')" title="leer mas">Leer Mas</a>
</div>
</div>
</div>
